<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoteItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_pill_item</item>
        <item name="android:padding">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NoteItemLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NoteItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="NoteItemSubtitle">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="NoteItemAmount">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
