<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header biru -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/bluePrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Panel form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pannel_form"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan Baru"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah pengeluaran baru anda"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="4dp"/>

                <!-- Harga -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etHarga"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_input"
                    android:hint="Rp.00"
                    android:paddingHorizontal="12dp"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no"/>

                <!-- Kategori -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="14dp"/>

                <EditText
                    android:id="@+id/etKategori"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_input"
                    android:paddingHorizontal="12dp"
                    android:inputType="textCapSentences"
                    android:importantForAutofill="no"/>

                <!-- Keterangan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textColor="@color/textPrimary"
                    android:layout_marginTop="14dp"/>

                <EditText
                    android:id="@+id/etKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/bg_input"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:importantForAutofill="no"/>

                <Button
                    android:id="@+id/btnSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Simpan"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_blue"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav (pakai komponenmu yang sudah ada) -->
    <include layout="@layout/part_bottom_nav"/>
</LinearLayout>
