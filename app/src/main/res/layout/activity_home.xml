<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header biru -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/bluePrimary"
        android:gravity="bottom"
        android:padding="16dp">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Panel kuning berisi 2 kartu ringkas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel"
                android:padding="12dp">

                <!-- Kartu Pemasukan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_kartu"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pemasukan"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/blueChip"
                            android:contentDescription="@null" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 3.000.000,-"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <!-- Kartu Pengeluaran -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_kartu"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pengeluaran"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/redChip"
                            android:contentDescription="@null"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 1.045.000,-"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tombol Pemasukan / Pengeluaran -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btnIncome"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pemasukkan"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_blue"
                    android:paddingHorizontal="16dp"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btnExpense"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Pengeluaran"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/bg_chip_red"/>

            </LinearLayout>

            <!-- Panel Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pannel_form"
                android:padding="14dp"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:textColor="@color/textPrimary"/>

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="12dp"
                    android:inputType="numberDecimal"
                    android:hint="Masukkan Jumlah" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/textPrimary"/>

                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="12dp"
                    android:hint="Contoh: Gaji Bulanan"
                    android:textColorHint="@color/textSecondary"/>

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Tambahkan"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_chip_blue"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_bottom_nav"
        android:paddingHorizontal="24dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/tabBook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book"
                app:tint="@color/white"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buku"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                app:tint="@color/white"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dompet"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabAnalysis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_insight"
                app:tint="@color/white"
                android:contentDescription="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analisis"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
